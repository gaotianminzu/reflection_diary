<div class="second_wrapper">
  <%= render "shared/second-header"%>
  <div class="profile_box">
      <div class="form" >
              <div class='form-wrap'>
                            <div class='form-header'>
                              <h1 class='form-header-text'>ユーザー登録</h1>
                            </div>

                            <%= form_with model: @user, url: user_registration_path, class:'registration-main',local: true do |f| %>
                              <div class="form-group">
                                <%= render 'devise/shared/error_messages', model: f.object%>
                              </div>
                            <div class="form-group">
                            <label class="form-text">nickname</label>
                              <%= f.text_field :nickname, autofocus: true,class:"input-default" %>
                            </div>
                              <div class="form-group">
                                <label class="form-text">メールアドレス</label>
                                <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"input-default" %>
                              </div>
                              <div class="form-group">
                                    <label class="form-text">パスワード</label>
                                    <%= f.password_field :password, autocomplete: "new-password",placeholder:"6文字以上の半角英数字",class:"input-default" %>
                              </div>
                              <div class="form-group">
                                  <label class="form-text">パスワード</label>
                                <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"input-default",placeholder:"同じパスワードを入力して下さい" %>
                              </div>
                              <br>
                              <div class="form-group">
                                  <%= f.submit "ユーザー登録" ,class:"register-btn" %>
                              </div>
                          <% end %>
              </div>
      </div>
  </div>
      <div class="push"></div>
  <%= render "shared/second-footer"%>
</div>
