<div class="second_wrapper">
  <%= render "shared/second-header"%>
  <div class="form top-space100" >
    <div class='form-wrap'>
          <div class='form-header'>
            <h1 class='form-header-text'>
              ログイン
            </h1>
          </div>


        <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
        <div class="form-group">
          <div class='login-flash-message'>
            <%= flash[:notice] %>
            <%= flash[:alert] %>
          </div>
        </div>


        <div class="form-group">
          <%= render 'devise/shared/error_messages', model: f.object%>
        </div>
            <div class="form-group">
            <label class="form-text">メールアドレス</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"input-default" %>
            </div>

            <div class="form-group">
            <label class="form-text">パスワード</label>
              <%= f.password_field :password, autocomplete: "current-password" ,class:"input-default",min_length: "6"%>
            </div>

            <div class="form-group">
            <%= f.submit "ログイン",class:"register-btn"  %>
            </div>
        <% end %>
    </div>
  </div>
  <%= render "shared/second-footer"%>
</div>
