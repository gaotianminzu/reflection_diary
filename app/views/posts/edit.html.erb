<div class="second_wrapper">
    <%= render "shared/second-header"%>
    <div class="wrapper" >
        <div class="form" >
                <div class='form-wrap'>
                    <div class='form-header'> <h1 class='form-header-text'>記録する</h1>
                    </div>
                    <%= form_with model:@post, url:post_path, local: true do |f| %>
                          <div class="form-group">
                            <label class="form-text">事実</label>
                              <%= f.text_area :fact, placeholder: 'どんなことがありましたか？' ,class:"input-area-default"  %>
                              </div>
                            <div class="form-group">
                            <label class="form-text">気付き</label>
                              <%= f.text_field :notice, placeholder: 'わかったことはありました？' ,class:"input-default" %>
                            </div>
                            <div class="form-group">
                              <ul class="form-radio">
                                <li> <%= f.radio_button :category_id, '' %> 指定なし</li>
                                  <li><%= f.radio_button :category_id, '1' %>  感謝</li>
                                  <li><%= f.radio_button :category_id, '2' %> 教訓</li>
                                  <li><%= f.radio_button :category_id, '3' %> 感情</li>
                              </ul>
                            </div>
                            <div class="form-group">
                            <label class="form-text">画像</label>
                            <%= f.file_field :image %>
                            </div>
                            <div class="form-group">
                            <%= f.submit '送信',class:"register-btn" %>
                            </div>
                    <% end %>
                    <br>
              </div>
        </div>
  </div>
    <%= render "shared/second-footer"%>
</div>
